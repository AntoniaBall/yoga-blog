{% extends 'base.html.twig' %}

{% block title %}Titre des articles enregistr√©s{% endblock %}

{% block content %}

{{form_start(form)}}
{{form_end(form)}}

{% if articles is empty %}
	<p>Reviens plus tard, il n'y a rien.</p>
{% else %}
	{% for article in articles %}
		<div class="articles_style">
			<h5>
				{{ article.titre}}
			</h5>
			<p>
				{{ article.contenu|slice(1,100)}}
			</p>
			<p>
				Le {{ article.date|date("d/m/y")}}
			</p>
			<p>
				<a href="{{ path('showArticle',{ articleId : article.id } ) }}"
				class="btn btn-primary">Voir l'article</a>
			</p>
		</div>
	{% endfor %}
{% endif %}
{% endblock %}