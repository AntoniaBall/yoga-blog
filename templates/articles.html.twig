{# voici une liste de tableaux dans articles, fais ce que tu veux avec #}

{% block content %}
	{% if articles is empty %}
		<p>Reviens plus tard, il n'y a rien.</p>
	{% else %}
	{% for article in articles %}
		<div class="articles_style">
			<h5>{{ article.titre}}</h5>
			<p> {{ article.contenu|slice(1,100)}}</p>
			<p> Le {{ article.date|date("d/m/y")}} 
			<a href="{{ path('showArticle',{ articleId : article.id } ) }}"
						class="btn btn-primary"> Voir l'article</a></p>
		</div>
	{% endfor %}
	{% endif %}
{% endblock %}