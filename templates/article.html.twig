{% extends 'base.html.twig' %}

{% block title %}Un article{% endblock %}

{% block subtitle %}
	<div class= "card card bg-dark text-white">
			<img class="card-img" 
 				src="{{ vich_uploader_asset(article, 'imageFile') }}"
 				alt="{{article.image}}"
 			/>
 			<div class="card-img-overlay">
 				<div class="card-title">
					<h2 class="card-text">{{ article.titre}}</h2>
				</div>
				<div class="article_date">
					<p class="card-text">{{ article.date|date("d/m/y")}}</p>
				</div>
					<a href="{{path('home')}}" class="pagination_link">Retour à l'accueil</a>
 			</div>
	</div>
{% endblock %}

{% block content %}
	<div class="article_content">
		{{ article.contenu|raw }}
	</div>
{% endblock %}

{% block pagination %} 
<div class="container">
	<div class="row">
		  <div class="col">
		  	{% if previousArticle is empty %}
		  		<a href="#" class="pagination_link_previous"> << Précedent</a>
			{% else %}
		  		<a href="{{ path('showArticle', { article: previousArticle.id} ) }}" 
		  		class="pagination_link_previous"> << Précedent</a>
		  	{% endif %}

		  </div>
		  <div class="col">
		  	{% if nextArticle is empty %}
		  		<a href="#" class="pagination_link_next">Suivant >> </a>
		  	{% else %}
		  		<a href="{{ path('showArticle', { article : nextArticle.id} ) }}" 
		  		class="pagination_link_next">Suivant >> </a>
		  	{% endif %}
		  </div>
	</div>
</div>
 {% endblock %}